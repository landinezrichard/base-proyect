$azul_face = #3B5998
$azul_twitter = #55ACEE
$rojo_gooplus = #DD4B39

//---------------------------------------------------------------------
// MIXINS
//---------------------------------------------------------------------

transicion(duracion = 0.3s)
	transition: all duracion linear

//---------------------------------------------------------------------
// ESTILOS GENERALES
//---------------------------------------------------------------------

html
	font-size 16px
	height 100%
	font-family 'Open Sans', sans-serif /* Fuente de google fonts */
	
body
	background red
	
img
	display inline-block
	max-width 100%
	height auto

figure
	margin 0
	padding 0

a
	text-decoration none
	color $azul_face
	transicion()
	
	&:hover
		text-decoration: underline
		
video, object, embed, iframe
	position absolute
	top 0
	left 0
	width 100%
	height 100%

//---------------------------------------------------------------------
// UTILIDADES (REUSABLE CLASES)
//---------------------------------------------------------------------

.u-centrar
	margin 0 auto
	max-width 1064px
	text-align center
	
